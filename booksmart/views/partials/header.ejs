<header class="page-header">
    <a id="logolink" href="/"><img id="logo" src="/src/booksmart-logo/cover_small_2.png" alt="booksmart logo"></a>
</header>
<nav class="page-nav">
  <div id="navigation">
    <div class="nav-btn-container"><a class="nav-btn btn" href="/textbooks">View All Textbooks</a></div>
    <% if(user) { %>
    <div class="nav-btn-container"><a class="nav-btn btn" href="/textbooks/new">Sell Your textbook</a></div>
    <% } %>
  </div>
  <div id="logins">
    <% if(!user) { %>
      <div class="nav-btn-container"><a class="nav-btn user-btn" id="login" href="/users/login">Log in</a></div>
      <div class="nav-btn-container"><a class="nav-btn user-btn" id="signup" href="/users/new">Sign up</a></div>
  <% } else { %>
      <div class="nav-btn-container"><a class="nav-btn user-btn" id="profile" href="/users/profile">Welcome, <%= name %>!</a></div>
    <div class="nav-btn-container"><a class="nav-btn user-btn" id="logout" href="/users/logout">Logout</a></div>
  <% } %>
  </div>
</nav>
<div id="flash-container">
  <!-- <div class='flash success'>test success message</div> -->
  <% if(errorMessages.length > 0) {%>
    <% errorMessages.forEach(message=>{%>
        <div class='flash error'>
            <%=message%>
        </div>
        <%});%>
            <%}%>
  <% if(successMessages.length > 0) {%>
      <% successMessages.forEach(message=>{%>
          <div class='flash success'>
              <%=message%>
          </div>
          <%});%>
              <%}%>
</div>
    